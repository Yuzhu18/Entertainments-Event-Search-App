<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:text="Keyword" />

    <TextView
        android:id="@+id/warn_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="Please enter mandtory field"
        android:textColor="@android:color/holo_red_dark" />

    <!--<EditText-->
        <!--android:id="@+id/input_keyword"-->
        <!--android:layout_width="349dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:layout_marginLeft="12dp"-->
        <!--android:hint=" Enter keyword"-->
        <!--android:inputType="textPersonName" />-->


    <android.support.v7.widget.AppCompatAutoCompleteTextView
        android:id="@+id/auto_complete_edit_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="Enter keyword"
        android:layout_marginLeft="12dp"
        android:layout_margin="10dp"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category" />

    <Spinner
        android:id="@+id/input_category"
        android:layout_marginLeft="12dp"
        android:layout_width="367dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView3"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance" />

    <EditText
        android:id="@+id/input_distance"
        android:layout_marginLeft="12dp"
        android:layout_width="349dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="10"
        android:inputType="number" />

    <Spinner
        android:id="@+id/input_mile"
        android:layout_marginLeft="12dp"
        android:layout_width="367dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView4"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/current_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current location" />

        <RadioButton
            android:id="@+id/other_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other. Specify Location" />
    </RadioGroup>

    <TextView
        android:id="@+id/warn_inputLoc"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter mandatory field"
        android:textColor="@android:color/holo_red_dark" />

    <EditText
        android:id="@+id/input_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:ems="10"
        android:hint="Type in the Location"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5dp"
        android:text="Search" />

    <Button
        android:id="@+id/clearBtn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="Clear" />

    </LinearLayout>


</LinearLayout>